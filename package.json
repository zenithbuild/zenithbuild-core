{
  "name": "@zenithbuild/core",
  "version": "1.3.3",
  "description": "Core library for the Zenith framework",
  "license": "MIT",
  "type": "module",
  "main": "./core/index.ts",
  "bin": {
    "zenith": "./bin/zenith.js"
  },
  "files": [
    "bin",
    "cli",
    "core",
    "router",
    "runtime",
    "dist",
    "index.ts",
    "tsconfig.json"
  ],
  "exports": {
    ".": "./core/index.ts",
    "./config": "./core/config.ts",
    "./plugins": "./core/index.ts",
    "./runtime": "./core/index.ts"
  },
  "keywords": [
    "zenith",
    "core",
    "framework"
  ],
  "author": "Zenith Team",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/zenithbuild/zenith-core.git"
  },
  "scripts": {
    "dev": "bun run build:cli && bin/zenith.ts dev",
    "build": "bun run build:cli",
    "start": "bun run build && bun run dev",
    "build:cli": "bun build bin/zenith.ts bin/zen-dev.ts bin/zen-build.ts bin/zen-preview.ts --outdir dist --target bun --bundle --external '*' && for f in dist/*.js; do echo '#!/usr/bin/env bun' | cat - \"$f\" > \"$f.tmp\" && mv \"$f.tmp\" \"$f\" && chmod +x \"$f\"; done",
    "format": "prettier --write \"**/*.ts\"",
    "format:check": "prettier --check \"**/*.ts\"",
    "release": "bun run scripts/release.ts",
    "release:dry": "bun run scripts/release.ts --dry-run",
    "release:patch": "bun run scripts/release.ts --bump=patch",
    "release:minor": "bun run scripts/release.ts --bump=minor",
    "release:major": "bun run scripts/release.ts --bump=major"
  },
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "@types/node": "^25.0.10",
    "prettier": "^3.8.1"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@zenithbuild/bundler": "1.3.2",
    "@zenithbuild/compiler": "1.3.2",
    "picocolors": "^1.1.1"
  }
}
