{
  "name": "@zenithbuild/core",
  "version": "0.7.0",
  "description": "Core library for the Zenith framework",
  "license": "MIT",
  "type": "module",
  "main": "./index.ts",
  "bin": {
    "zenith": "./dist/zenith.js",
    "zenith-dev": "./dist/zen-dev.js",
    "zen-dev": "./dist/zen-dev.js",
    "zen-build": "./dist/zen-build.js",
    "zen-preview": "./dist/zen-preview.js"
  },
  "files": [
    "bin",
    "cli",
    "compiler",
    "core",
    "router",
    "runtime",
    "dist",
    "index.ts",
    "tsconfig.json"
  ],
  "exports": {
    ".": "./index.ts",
    "./compiler": "./compiler/index.ts",
    "./config": "./core/config/index.ts",
    "./core": "./core/index.ts",
    "./router": "./router/index.ts",
    "./runtime": "./runtime/index.ts"
  },
  "keywords": [
    "zenith",
    "core",
    "framework"
  ],
  "author": "Zenith Team",
  "repository": {
    "type": "git",
    "url": "git@github.com:zenithbuild/zenith-core.git"
  },
  "scripts": {
    "dev": "bun dev",
    "build": "bun build",
    "start": "bun run build && bun run dev",
    "build:cli": "bun build bin/zenith.ts bin/zen-dev.ts bin/zen-build.ts bin/zen-preview.ts --outdir dist --target bun --bundle && for f in dist/*.js; do echo '#!/usr/bin/env bun' | cat - \"$f\" > \"$f.tmp\" && mv \"$f.tmp\" \"$f\" && chmod +x \"$f\"; done",
    "format": "prettier --write \"**/*.ts\"",
    "format:check": "prettier --check \"**/*.ts\"",
    "release": "bun run scripts/release.ts",
    "release:dry": "bun run scripts/release.ts --dry-run",
    "release:patch": "bun run scripts/release.ts --bump=patch",
    "release:minor": "bun run scripts/release.ts --bump=minor",
    "release:major": "bun run scripts/release.ts --bump=major"
  },
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "latest",
    "prettier": "^3.7.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@zenithbuild/router": "latest",
    "@types/acorn": "^6.0.4",
    "@types/marked": "^6.0.0",
    "@types/parse5": "^7.0.0",
    "acorn": "^8.15.0",
    "es-module-lexer": "^2.0.0",
    "marked": "^17.0.1",
    "parse5": "^8.0.0",
    "picocolors": "^1.1.1"
  }
}